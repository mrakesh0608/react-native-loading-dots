{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "esModuleInterop": true,
        "jsx": "react-native",
        "lib": [
            "es5",
            "es2015",
            "es2016",
            "dom",
            "esnext"
        ],
        "types": [
            "node"
        ],
        "module": "es2015",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "outDir": "dist/esm",
        "sourceMap": true,
        "strict": true,
        "target": "es6",
        "skipLibCheck": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ]
}